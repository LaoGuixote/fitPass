@{
    ViewData["Title"] = "後台首頁";
}
<style>
    .fc-event-title,
    .fc-event-time,
    .fc-daygrid-day-number,
    .fc-col-header-cell-cushion {
        color: #00D956 !important;
    }

    .fc-col-header-cell-cushion,
    .fc-daygrid-day-number {
        text-decoration: none !important;
        border-bottom: none !important;
    }

    .fc-event-title {
        white-space: normal !important;
        word-wrap: break-word;
        font-size: 0.85em;
    }

    .fc-daygrid-event {
        height: auto !important;
        line-height: 1.4em;
    }

    .fc-daygrid-day-frame {
        min-width: 120px;
    }

    #calendar {
        width: 100%;
        min-height: 600px;
    }

    /* 控制統計卡片高度與縮排 */
    .stat-card {
        min-height: 120px;
        padding: 12px 16px;
    }

    .stat-title {
        font-size: 0.8rem;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 6px;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
        color: #444;
    }
</style>

<div class="dashboard-box">
    <div class="row">
        <!-- 左側：月曆區（佔8份） -->
        <div class="col-lg-10 mb-3">
            <div class="card shadow h-100 p-3"> 
                <h4 class="mb-3"><i class="fa fa-calendar-alt"></i> 📅 課程排程月曆</h4>
                <div id="calendar"></div>
            </div>
        </div>

        <!-- 右側：統計卡片區（佔2份） -->
        <div class="col-lg-2 d-flex flex-column gap-3">
            <!-- 今日公告數 -->
            <div class="card border-left-primary shadow stat-card">
                <div class="stat-title text-primary">今日到期公告數</div>
                <div class="stat-value">@ViewData["TodayNews"]</div>
            </div>

            <!-- 場內人數 -->
            <div class="card border-left-success shadow stat-card">
                <div class="stat-title text-success">目前場內人數</div>
                <div class="stat-value">@ViewData["InsideNowCount"]</div>
            </div>

            <div class="card border-left-warning shadow stat-card">
                <div class="stat-title text-warning">尚未處理意見回饋數</div>
                <div class="stat-value">@ViewData["FeedbackPendingCount"]</div>
            </div>
            <!-- 即將到期會員 -->
            <div class="card border-left-warning shadow stat-card">
                <div class="stat-title text-warning">會籍即將到期會員</div>
                <div class="stat-value" style="font-size: 0.95rem;">
                    @{
                        var expiring = ViewData["ExpiringMembers"] as IEnumerable<dynamic>;
                        if (expiring != null && expiring.Any())
                        {
                            foreach (var member in expiring)
                            {
                                <div>@member.Name（@member.EndDate.ToString("MM/dd")）</div>
                            }
                        }
                        else
                        {
                            <div>無</div>
                        }
                    }
                </div>
            </div>


        </div>
    </div>
</div>

<!-- FullCalendar 套件 -->
<link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.18/index.global.min.css' rel='stylesheet' />
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.18/index.global.min.js'></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            locale: 'zh-tw',
            timeZone: 'local',
            events: '/Admin/GetCoursesForCalendar',
            eventClick: function(info) {
                alert('課程名稱：' + info.event.title + '\n教練：' + info.event.extendedProps.coachName);
            }
        });
        calendar.render();
    });
</script>
