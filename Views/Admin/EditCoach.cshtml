@model fitPass.Models.Coach
@{
    ViewData["Title"] = "編輯教練";
}



<div class="dashboard-box">
<h2>@ViewData["Title"]</h2>

<form asp-action="EditCoach" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="CoachId" />
    <input type="hidden" asp-for="AccountId" />

    <div class="mb-3">
        <label class="form-label">教練專長</label>
        <input asp-for="Specialty" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">自我介紹</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">教練類型</label>
        <select asp-for="CoachType" class="form-select">
            <option value="">請選擇</option>
            <option value="1">私人教練</option>
            <option value="2">團體教練</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">目前照片</label>
        @if (Model.Photo != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" style="max-height: 150px;" />
        }
        <input type="file" name="Photo" class="form-control mt-2" />
    </div>

    <button type="submit" class="btn btn-primary">儲存變更</button>
    <a asp-action="CoachMange" class="btn btn-secondary">取消</a>
</form>
</div>