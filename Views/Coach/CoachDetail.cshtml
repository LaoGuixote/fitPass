@{
    @model fitPass.ViewModels.CoachDetailViewModel
    ViewData["Title"] = "教練詳細";
}
<head>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>

<div>
    <div class="card">

    @if (Model.CoachPhoto != null)
    {
        <img style="width:250px" src="@Model.CoachPhoto" class="d-block mx-auto img-fluid" alt="教練照片" />
    }
    </div>
    <br />

    <h2 class="text-title-xl" style="letter-spacing: 0.4rem">@Model.Name</h2>

    @if (Model.CoachType == 1)
    {
        <p class="text-info-sm">私人教練</p>
        <a href="@Url.Action("ReserveCalendar", "Reservation", new { coachId = @Model.CoachId })"  style="text-decoration: none;">
        <button class="btn-green d-block mx-auto w-100" style="color: black; font-size: 1.2rem">預約一對一教練課</button>
        </a>
        <p class="mt-3">擅長項目：@Model.Specialty</p>
    }
    else
    {
        <p>團課教師</p>
<a href="@Url.Action("GroupCourseList", "CourseSchedules", new { coachId = Model.CoachId })" style="text-decoration: none;">
    <button class="btn-orange d-block mx-auto w-100" style="color: black; font-size: 1.2rem">
        報名此教練的課程
    </button>
</a>
        <p class="mt-3">擅長項目：@Model.Specialty</p>
    }

    <p>@Model.Description</p>

    <div class="d-flex align-items-center">
        <span class="text-center me-3 text-title-md" ><b>聯絡資訊</b></span>
        <i class="bi bi-instagram fs-2 me-3" style="color: #00D856"></i>
        <i class="bi bi-telephone-fill fs-2"style="color: #00D856"></i>
    </div>

</div>