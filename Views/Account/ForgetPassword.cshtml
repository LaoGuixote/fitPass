@{
    ViewData["Title"] = "忘記密碼";
}

<h2 class="text-title-xl">忘記密碼</h2>
<form asp-action="ForgetPassword" method="post">
    <div class="form-group">
        <label class="mb-3">請輸入Email：</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn-green mt-3 w-100" id="sendBtn">送出</button>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>

    <script>
        setTimeout(function(){
            window.location.href = "/Account/Login";
        }, 2000);
    </script>
}

