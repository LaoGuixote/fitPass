@using fitPass.Models
@inject GymManagementContext _context

@{
    var memberId = Context.Session.GetInt32("MemberId");
    var memberName = Context.Session.GetString("UserName") ?? "會員";
    var adminRole = Context.Session.GetInt32("Admin") ?? 1;
    var currentPoint = 0;

    if (memberId != null)
    {
        var user = _context.Accounts.FirstOrDefault(a => a.MemberId == memberId);
        if (user != null)
        {
            currentPoint = user.Point;
        }
    }
}


<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FitPass</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <style>
        body {
            background-color: #f2f2f2;
            color: #404040;
            font-family: 'GenYoGothic2', sans-serif;
            font-size: 14px;
        }

        .fitpass-header {
            background-image: url('/img/header-bg2.png');
            background-size: cover;
            background-position: center;
            padding: 20px;
            border-bottom-left-radius: 30px;
            border-bottom-right-radius: 30px;
            color: white;
            position: sticky;
            top: 0;
            width: 100%;
            z-index: 1030; /* 高於 modal backdrop */
        }

        .fitpass-logo {
            font-size: 20px;
            font-weight: bold;
            color: #ffffff;
        }

        .page-header-title {
            font-size: 24px;
            font-weight: bold;
            color: white;
            line-height: 32px;
        }

        .text-title-xl {
            font-size: 24px;
            font-weight: bold;
            line-height: 32px;
            color: #404040;
        }

        .text-title-md {
            font-size: 14px;
            font-weight: 500;
            line-height: 24px;
            color: #404040;
        }

        .page-wrapper {
            max-width: 640px;
            margin: 0 auto;
            padding-left: 1rem;
            padding-right: 1rem;
            padding-bottom: 3rem;
        }

        .text-info-sm {
            font-size: 12px;
            font-weight: 400;
            line-height: 20px;
            color: #979797;
        }

        .qrcode-fixed-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: #fff;
            z-index: 1050;
            border-top: 1px solid #ddd;
            padding: 0.5rem 1rem;
            box-shadow: 0 -2px 6px rgba(0,0,0,0.05);
        }
        .btn-green {
            background-color: #00D856;
            color: white;
            font-size: 14px;
            font-weight: 500;
            padding: 10px 16px;
            border: none;
            border-radius: 6px;
        }

            .btn-green:hover {
                background-color: #00b84d;
                color: white;
                opacity: 1;
            }

        .btn-orange {
            background-color: #FF8000;
            color: white;
            font-size: 14px;
            font-weight: 500;
            padding: 10px 16px;
            border: none;
            border-radius: 6px;
        }

        .fitpass-card {
            background-color: white;
            border-radius: 10px;
            padding: 12px;
        }

        .fitpass-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px;
            padding: 0 24px;
        }

        .news-scroll-container {
            scrollbar-width: none; /* Firefox */
            -ms-overflow-style: none; /* IE 10+ */
            overflow-x: auto;
        }

            .news-scroll-container::-webkit-scrollbar {
                display: none; /* Chrome, Safari */
            }

        /* Slide-in 選單動畫 */
        #fitpass-menu-overlay {
            position: fixed;
            top: 0;
            right: 0;
            transform: translateX(100%);
            width: 100%;
            height: 100%;
            background-color: #eeeeee;
            color: #404040;
            z-index: 9999;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
        }

            #fitpass-menu-overlay.show {
                transform: translateX(0);
            }

            #fitpass-menu-overlay a {
                display: flex;
                font-weight: bold;
                justify-content: space-between;
                align-items: center;
                padding: 12px 0;
                text-decoration: none;
                color: #404040;
                border-bottom: 1px solid rgba(0, 0, 0, 0.2);
            }

            #fitpass-menu-overlay .btn-logout {
                background-color: #FF4E4E;
                color: #ffffff;
                font-weight: bold;
                border: none;
                width: 100%;
                padding: 8px 0;
                border-radius: 4px;
                text-align: center;
                display: block;
            }

        .menu-icon {
            width: 20px;
            height: 20px;
            margin-right: 8px;
            vertical-align: middle;
            filter: brightness(0) saturate(100%) invert(43%) sepia(84%) saturate(942%) hue-rotate(81deg) brightness(97%) contrast(106%);
        }
    </style>



</head>
<body>
    <div class="fitpass-header">
        <div class="d-flex justify-content-between align-items-center">
            <a href="/Member/index" class="fitpass-logo"><img src="/img/FP_WT.svg" alt="FitPass Logo" style="height: 30px;"></a>
            <div class="d-flex align-items-center gap-3">
                <span class="text-white fw-bold me-2" style="font-size: 14px;">
                    @currentPoint 點
                </span>
                <a href="/Member/Edit" class="text-white" style="text-decoration: none;">
                    <i class="bi bi-person-circle fs-4" style="cursor: pointer;"></i>
                </a>
                <i class="bi bi-list fs-4" onclick="openMenu()" style="cursor: pointer;"></i>
            </div>


        </div>
        <div class="page-header-title mt-3">@ViewData["Title"]</div>
    </div>


    <!-- 主體內容 -->
    <div class="container px-3 pt-3 pb-5">
        @RenderBody()
    </div>

    <div id="fitpass-menu-overlay">
        <div class="p-3">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="d-flex align-items-center text-dark">
                    @* <i class="bi bi-person-circle fs-3 me-2"></i> *@
                    <strong>@memberName</strong>
                </div>
                <i class="bi bi-x-lg fs-3" onclick="closeMenu()" style="cursor: pointer;"></i>
            </div>

            <div id="mainMenu" class="mt-4">
                @if (adminRole == 2)
                {
                    <a href="/Coach/Index"><img src="/img/menu_home.svg" class="menu-icon" /> 教練首頁 <i class="bi bi-chevron-right"></i></a>
                    <a href="/News/Index"><img src="/img/menu_news.svg" class="menu-icon" /> 最新消息 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Coach/MobileSchedule"><img src="/img/menu_myclass.svg" class="menu-icon" /> 我的開課 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Courses"><img src="/img/menu_allclass.svg" class="menu-icon" /> 所有課程 <i class="bi bi-chevron-right"></i></a>
                    
                }
                else
                {
                    <a href="/Member/Index"><img src="/img/menu_home.svg" class="menu-icon" /> 首頁 <i class="bi bi-chevron-right"></i></a>
                    <a href="/News/Index"><img src="/img/menu_news.svg" class="menu-icon" /> 最新消息 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Member/MemberCourseOverview"><img src="/img/menu_myclass.svg" class="menu-icon" /> 我的課程 <i class="bi bi-chevron-right"></i></a>
                    <a href="/CourseSchedules/GroupCourseList"><img src="/img/menu_allclass.svg" class="menu-icon" /> 所有課程 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Coach/CoachOverview"><img src="/img/menu_coach.svg" class="menu-icon" /> 教練師資 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Subscribe/index"><img src="/img/menu_suscrible.svg" class="menu-icon" /> 我的訂閱 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Inbody/Index"><img src="/img/menu_inbody.svg" class="menu-icon" /> InBody 分析 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Point/Index"><img src="/img/menu_inbody.svg" class="menu-icon" /> 點數儲值 <i class="bi bi-chevron-right"></i></a>
                    <a href="/Feedback/Index"><img src="/img/menu_cs.svg" class="menu-icon" /> 聯繫客服 <i class="bi bi-chevron-right"></i></a>
                }
            </div>

            <div class="mt-5 text-center">
                <form action="/Account/Logout" method="post">
                    <button type="submit" class="btn btn-logout">登出</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function openMenu() {
            document.getElementById('fitpass-menu-overlay').classList.add('show');
            document.body.style.overflow = 'hidden';
        }
        function closeMenu() {
            document.getElementById('fitpass-menu-overlay').classList.remove('show');
            document.body.style.overflow = '';
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
