@model fitPass.Models.News
@{
    ViewData["Title"] = "最新消息";
}

<div class="fitpass-card mb-3 p-4 border rounded shadow-sm">
    <h4 class="mb-2 text-success fs-3 fs-md-2 fs-lg-1">@Model.Title</h4>
    <p class="text-muted small mb-3 fs-6 fs-md-7">
        發布時間：@Model.PublishTime.Value.ToString("yyyy年MM月dd日")
    </p>

    @if (Model.Insideimg != null)
    {
        var base64 = "data:image/png;base64," + Convert.ToBase64String(Model.Insideimg);
        <div class="text-center my-3">
            <img src="@base64" class="img-fluid rounded border" alt="@Model.Title 圖片" style="max-height: 300px; object-fit: cover;" />
        </div>
    }

    <div class="mt-3 lh-lg fs-5 fs-md-6">
        @Html.Raw(Model.Content?.Replace("\n", "<br/>"))
    </div>
</div>
